{
    "[html]": {
        "editor.defaultFormatter": "monosans.djlint"
    },
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "editor.formatOnSave": true,
    "files.associations": {
        "*.html": "html",
        "*.jinja": "jinja-html"
    },
    "files.autoSave": "afterDelay",
    "files.refactoring.autoSave": true,
    "files.watcherExclude": {
        "**/.spago/**": true
    },
    "git.autofetch": true,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.currentLine.pullRequests.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,
    "gitlens.statusBar.enabled": false,
    "git.autofetchPeriod": 10,
    "json.schemas": [
        {
            "fileMatch": [
                "**/*.markdownlint.json"
            ],
            "url": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json"
        },
        {
            "fileMatch": [
                "**/pyproject.toml"
            ],
            "url": "https://json.schemastore.org/pyproject.json"
        }
    ],
    "markdown.extension.orderedList.autoRenumber": false,
    "markdownlint.config": {},
    "markdownlint.lintWorkspaceGlobs": [
        "**/*.{md,mkd,mdwn,mdown,markdown,markdn,mdtxt,mdtext,workbook}",
        "!**/bower_components",
        "!**/node_modules",
        "!**/vendor",
        "!**/.*"
    ],
    "nix.enableLanguageServer": true,
    "nix.serverPath": "rnix-lsp",
    "purescript.formatter": "purs-tidy",
    "purescript.outputDirectory": "./app_purescript/output/",
    "purescript.packagePath": "./app_purescript",
    "purescript.sourcePath": "./app_purescript/src",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3",
    "python.formatting.provider": "black",
    "python.linting.mypyCategorySeverity.error": "Error",
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": true,
    "todo-tree.filtering.excludeGlobs": [
        "**/vendor/**",
        "**/node_modules/**",
        "**/dist/**",
        "**/bower_components/**",
        "**/build/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/*.stack-work"
    ],
    "todo-tree.regex.regex": "((--\\s*($TAGS))|\\{-\\s($TAGS).*(\\n.*)*-})|(//|#|<!--|/\\*|^\\s*\\*)\\s*($TAGS)",
    "workbench.colorTheme": "Monokai",
    "workbench.sideBar.location": "right"
}
